@model cumulative1.Models.Course

<div id="containershow">
    <nav>
        <a class="navlink" href="/CoursePage/Show/@Model.CourseId">Back</a>
    </nav>

    <h2>Edit Course</h2>

    <form method="POST" action="/CoursePage/Update/@Model.CourseId">
        <div>
            <label for="CourseCode">Course Code:</label>
            <input type="text" name="CourseCode" id="CourseCode" value="@Model.CourseCode" />
        </div>
        <div>
            <label for="TeacherId">Teacher ID:</label>
            <input type="number" name="TeacherId" id="TeacherId" value="@Model.TeacherId" />
        </div>
        <div>
            <label for="StartDate">Start Date:</label>
            <input type="date" name="StartDate" id="StartDate" value="@Model.StartDate" />
        </div>
        <div>
            <label for="FinishDate">Finish Date:</label>
            <input type="date" name="FinishDate" id="FinishDate" value="@Model.FinishDate" />
        </div>
        <div>
            <label for="CourseName">Course Name:</label>
            <input type="text" name="CourseName" id="CourseName" value="@Model.CourseName" />
        </div>
        <div>
            <input type="submit" value="Update Course" />
        </div>
    </form>
</div>
